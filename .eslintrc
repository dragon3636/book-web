{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "18.0"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "tabWidth": 12,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "eslintIntegration": true,
        "printWidth": 120
      }
    ]
  }
}
